<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    android:layout_width="match_parent">
<androidx.viewpager.widget.ViewPager
    android:orientation="vertical"
    android:id="@+id/vPagerReader"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


</androidx.viewpager.widget.ViewPager>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarBackground"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:layout_alignBottom="@id/vPagerReader">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:id="@+id/pagesInfo"
            android:layout_marginTop="@dimen/seekBarMargin"
            android:textColor="@android:color/white"
            android:textSize="@dimen/secondaryText"
            android:layout_height="wrap_content" />
        <SeekBar
            android:layout_width="match_parent"
            android:id="@+id/seekBar"
            android:layout_margin="@dimen/seekBarMargin"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>

